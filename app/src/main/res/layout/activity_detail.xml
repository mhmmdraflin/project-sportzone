<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_wave">

    <!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="150dp"
        android:src="@drawable/bg_rounded_top" />

    <!-- CardView untuk mengelilingi semua elemen -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <!-- ScrollView untuk konten -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- LinearLayout sebagai wadah untuk elemen-elemen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TextView untuk Nama -->
                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Nomor Telepon -->
                <TextView
                    android:id="@+id/tvDetailPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Tanggal -->
                <TextView
                    android:id="@+id/tvDetailDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Lapangan -->
                <TextView
                    android:id="@+id/tvDetailCourt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lapangan"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Olahraga -->
                <TextView
                    android:id="@+id/tvDetailSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Olahraga"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Durasi -->
                <TextView
                    android:id="@+id/tvDetailDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durasi"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Dari Jam -->
                <TextView
                    android:id="@+id/tvDetailFromTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dari Jam"
                    android:textSize="18sp"
                    android:padding="8dp" />

                <!-- TextView untuk Sampai Jam -->
                <TextView
                    android:id="@+id/tvDetailToTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sampai Jam"
                    android:textSize="18sp"
                    android:padding="8dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
